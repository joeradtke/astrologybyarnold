<%if line_item==@current_item%>
<tr id="current_item">
<%else%>
<tr>
<%end%>
  <td><%=line_item.product.name%></td>
  <td class="quantity">
    <%=form_for(line_item, url: line_item_path(line_item),html: {method:'patch'},remote: :true) do |f|%>
     <%=f.text_field  :quantity, :value=>line_item.quantity%>
     <%=f.submit "Update"%>
  <%end%>
  </td>
  <td class="price"><%=number_to_currency(line_item.total_price)%></td>
 
  



