<div class="span10 blue">
<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{:class=>'form-horizontal blue'}) do |f| %>
  <%= f.input :username, autofocus: true%>
  <%= f.input :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <div class='form-group'><%= f.input :remember_me, as: :boolean %>
  <% end -%>
  <%= f.button :submit, "Log in" %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>
